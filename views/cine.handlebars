<div class="ContenedorCines" style= "color: rgb(255, 0, 0);">
  {{#each cines}}
    <div class="Cines" id="{{this.idCines}}">
      <p>{{this.nombre}}</p>
      <p>{{this.barrio}}</p>
      <p>{{this.direccion}}</p>
    <form action="/peliculas" method="GET" class="container-sm">
      <div class="mb-3 form-check" style="margin-top: 20px; ">
          <button  class="btn btn-primary">Ingresar</button>
          <input type="hidden" value="{{this.idCines}}" name="idCine">
      </div>
    </form>
    </div>
  {{/each}}
</div>